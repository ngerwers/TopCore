<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TopCore2.Layouts.BasePage"
             NavigationPage.HasNavigationBar="False"
             Shell.PresentationMode="NotAnimated"
             BackgroundColor="{StaticResource PageBackground}">

    <Grid RowDefinitions="*, Auto">

        <Grid Grid.Row="0" RowDefinitions="Auto, *" Padding="20">
            <Label x:Name="TitleLabel"
                   Grid.Row="0"
                   Text=""
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   Margin="0,0,0,20"/>
            
            <!-- Hauptinhaltsbereich, in den der Inhalt der abgeleiteten Seiten eingefügt wird -->
            <ContentView x:Name="ContentHost" Grid.Row="1" />
        </Grid>
        
        <!-- Untere Navigationsleiste -->
        <Grid Grid.Row="1"
              HeightRequest="60"
              BackgroundColor="{StaticResource SidebarBackground}"
              ColumnDefinitions="*, *, *, *">

            <Button Grid.Column="0" Text="Listen" Clicked="OnListenTapped" Style="{StaticResource NavButtonStyle}" />
            <Button Grid.Column="1" Text="Wie?" Clicked="OnWieTapped" Style="{StaticResource NavButtonStyle}" />
            <Button Grid.Column="2" Text="Neue Liste" Clicked="OnNeueListeTapped" Style="{StaticResource NavButtonStyle}" />
            <Button Grid.Column="3" Text="Über Uns" Clicked="OnUeberUnsTapped" Style="{StaticResource NavButtonStyle}" />

        </Grid>
    </Grid>
</ContentPage>