<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TopCore2.Layouts.BasePage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource PageBackground}">

    <Grid ColumnDefinitions="250, *">

        <Grid Grid.Column="0" 
              BackgroundColor="{StaticResource SidebarBackground}"
              Padding="30,40,20,20"
              RowDefinitions="Auto, *">

            <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,40">
                <Image Source="logo-dark.png" 
                       HorizontalOptions="Start"
                       HeightRequest="60" 
                       WidthRequest="80"
                       Aspect="AspectFit"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1" Spacing="15">

                <Label Text="Listen" Style="{StaticResource NavLabelStyle}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnListenTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="Wie?" Style="{StaticResource NavLabelStyle}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnWieTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="Neue Liste" Style="{StaticResource NavLabelStyle}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNeueListeTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="Ãœber Uns" Style="{StaticResource NavLabelStyle}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnUeberUnsTapped"/>
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </Grid>

        <Grid Grid.Column="1" 
              Padding="40,40,40,0" 
              RowDefinitions="Auto, *">

            <Label x:Name="TitleLabel"
                   Grid.Row="0"
                   Text="Titel Platzhalter"
                   FontSize="42"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   Margin="0,0,0,30"/>

            <ContentView x:Name="ContentHost"
                         Grid.Row="1" />
        </Grid>

    </Grid>
</ContentPage>